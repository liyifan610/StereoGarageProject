<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-config.dtd">  
<configuration>  
     
   <!-- 类别名定义 -->  
   <typeAliases>  
         <typeAlias type="com.gctw.stereogarage.entity.LotEntity" alias="LotEntity"/>
         <typeAlias type="com.gctw.stereogarage.entity.UserEntity" alias="UserEntity"/>
         <typeAlias type="com.gctw.stereogarage.entity.OperationEntity" alias="OperationEntity"/>
    </typeAliases>  
    <!-- 配置Mybatis的环境，事务及数据源等等 -->  
    <environments default="development">  
        <environment id="development">  
            <transactionManager type="JDBC" />  
            <dataSource type="POOLED">  
                <property name="driver" value="com.mysql.jdbc.Driver" />  
                <property name="url" value="jdbc:mysql://127.0.0.1:3306/stereo_garage_project" />  
                <property name="username" value="root" />  
                <property name="password" value="w19920610" />  
            </dataSource>  
        </environment>  
    </environments>  
      
    <!-- 指定映射文件或者映射类 -->  
    <mappers>  
        <mapper resource="com/gctw/stereogarage/mapper/database/LotMapper.xml" />
        <mapper resource="com/gctw/stereogarage/mapper/database/UserMapper.xml" />
        <mapper resource="com/gctw/stereogarage/mapper/database/OperationMapper.xml"/>
    </mappers>  
</configuration>  